<section class="text-gray-700 body-font overflow-hidden bg-white">
    <div class="container px-5 py-24 mx-auto">
        <div class="lg:w-4/5 mx-auto flex flex-wrap">
            <img alt="ecommerce" class="lg:w-1/2 w-full object-cover object-center rounded border border-gray-200" src="{{ product.image }}">
            <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0">
                <h2 class="text-sm title-font text-gray-500 tracking-widest">Lenovo3</h2>
                <h1 class="text-gray-900 text-3xl title-font font-medium mb-1">{{ product.title }}</h1>
                <div class="flex mb-4">
                  <span class="flex items-center">
                      {% if product.rating|round(0, 'floor') == 0%}
                          {% for i in 1..5 %}
                              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-yellow-600" viewBox="0 0 24 24">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                              </svg>
                          {% endfor %}
                          {{ product.rating }}
                      {% else %}
                          {% for i in 1..product.rating|round(0, 'floor') %}
                              <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-yellow-600" viewBox="0 0 24 24">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                              </svg>
                          {% endfor %}
                          {% set noStars = 5-product.rating|round(0, 'floor') %}
                          {% for i in 1..noStars %}
                              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-yellow-600" viewBox="0 0 24 24">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                              </svg>
                          {% endfor %}
                          {{ product.rating }}
                      {% endif %}
                  </span>
                </div>
                <span class="title-font font-medium text-2xl text-gray-900"> {{ product.price }} €</span>
                <br>
                <p class="leading-relaxed">{{ product.description }}</p>
                <br>
                <button class="text-white bg-gradient-to-r from-cyan-500 to-blue-500 border-0 py-2 px-6 focus:outline-none hover:bg-blue-800 rounded">Acheter sur Amazon</button>
            </div>
        </div>
    </div>
</section>





