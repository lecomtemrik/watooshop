{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <section class="text-gray-600 body-font">
        <div class="container px-5 py-24 mx-auto">
            <div class="flex flex-wrap w-full mb-20">
                <div class="lg:w-1/4 w-full mb-6 lg:mb-0">
                    <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900">{{ products.owner.title }}</h1>
                    <div class="h-1 w-20 bg-indigo-500 rounded"></div>
                </div>
                <p class="lg:w-3/4 w-full leading-relaxed text-gray-500">Vous trouverez ici les {{ products.owner.title }} de toutes les catégories de Amazon.fr </p>
            </div>
            <div class="flex flex-wrap -m-4 xl:justify-start sm:justify-center">
                {% for product in products %}
                    <div class="p-6 rounded-lg">
                        <!-- Product Card -->
                        <div class="flex flex-col shadow-md cursor-pointer w-96 hover:-translate-y-1 duration-300">
                            <!-- Preview -->
                            <div class="inline relative group h-48 bg-white">
                                <!-- Thumbnail -->
                                <img class="absolute rounded-t object-cover h-full w-full object-scale-down" src="{{ product.image }}" alt="Product Preview" />
                                <!-- Hover Bar -->
                                <div class="flex flex-row absolute justify-end
                                h-16 w-full bottom-0 px-3 space-x-2
                                bg-none opacity-0 group-hover:opacity-100
                                group-hover:bg-gradient-to-t from-black/20 via-gray-800/20 to-transparent
                                transition-all ease-in-out duration-200 delay-100">
                                </div>
                            </div>
                            <!-- Body -->
                            <div class="flex flex-col bg-white rounded-b p-3">
                                <!-- Title -->
                                <div class="text-sm font-semibold text-gray-900 hover:underline truncate">
                                    <a href="{{ path("product", {pathCategory: product.subcategory.category.title,
                                        pathSubCategory: product.subcategory.title,
                                        pathProduct: product.pathProduct}) }}">{{ product.title }}</a>
                                </div>
                                <!-- Author - Category -->
                                <div class="text-xxs text-gray-400 truncate mt-1">
                                    {{ product.description }}
                                </div>
                                <div class="text-xxs text-gray-400 truncate mt-1">
                                    {{ product.subCategory.title }}
                                </div>
                                <div class="text-xxs text-gray-400 truncate mt-1">
                                    {{ product.rank.title }}
                                </div>
                                <!-- Price -->
                                <div class="text-sm text-gray-600 font-bold mt-4 mb-1">
                                    {{ product.price }} €
                                </div>
                                <button class="flex ml-auto text-white bg-gradient-to-r from-cyan-500 to-blue-500 border-0 py-2 px-6 focus:outline-none hover:bg-blue-800 rounded">Acheter sur Amazon</button>
                            </div>
                        </div>
                    </div>
                {%  endfor %}
            </div>
        </div>
    </section>
{% endblock %}
