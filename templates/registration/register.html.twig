{% extends 'dashboard/base.html.twig' %}

{% block title %}Inscription utilisateur{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}

        <div>
            <label for="price" class="block text-sm font-medium text-gray-700">{{ form_label(registrationForm.email, 'Adresse email') }}</label>
            <div class="mt-1 relative rounded-md shadow-sm">
                {{ form_widget(registrationForm.email, {'attr': {'class': 'focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md'}}) }}
            </div>
        </div>

        <div>
            <label for="price" class="block text-sm font-medium text-gray-700">{{ form_label(registrationForm.plainPassword, 'Mot de passe') }}</label>
            <div class="mt-1 relative rounded-md shadow-sm">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md'}}) }}
            </div>
        </div>

        <div>
            <label for="price" class="block text-sm font-medium text-gray-700">{{ form_label(registrationForm.agreeTerms, 'Accepter les conditions') }}</label>
            <div class="mt-1 relative rounded-md shadow-sm">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md'}}) }}
            </div>
        </div>

        <div class="px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
            <button type="submit" class="mt-3 w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-sky-600 text-base font-medium text-white hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-600 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Enregistrer</button>
        </div>

    {{ form_end(registrationForm) }}

{% endblock %}
